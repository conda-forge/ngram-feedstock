+    add_compile_options(/wd4018 /wd4244 /wd4267 /wd4291 /wd4305)
+endif (MSVC)
+
+set(SOVERSION "1314")
+
+if (NGRAM_BUILD_TEST)
+    include(CTest)
+    enable_testing()
+endif()
+
+add_subdirectory(src)
